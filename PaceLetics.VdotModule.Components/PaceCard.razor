@using PaceLetics.CoreModule.Infrastructure.Constants

<MudCard Class="pa-3 rounded-lg mb-2" Elevation="1">
    <MudStack Direction="Row" AlignItems="AlignItems.Center" JustifyContent="Space-between">

        <MudStack Spacing="0">
            <MudText Typo="Typo.subtitle1" Class="fw-bold">
                @PaceKey
            </MudText>

            <MudText Typo="Typo.body2" Color="Color.Secondary">
                @UpperPace.ToString("mm':'ss") – @LowerPace.ToString("mm':'ss") min/km
            </MudText>

            <MudText Link="true" Color="Color.Primary"
                     Class="cursor-pointer mt-1"
                     OnClick="@OnShowMoreInfoClickAsnyc">
                Mehr Infos →
            </MudText>
        </MudStack>

        <MudAvatar Size="Size.Large">
            <MudImage Src="@GetIcon()"></MudImage>
        </MudAvatar>

    </MudStack>
</MudCard>

@code {
    private string GetIcon() => PaceKey switch
    {
        PaceKeys.Easy => "/images/icons/epace.png",
        PaceKeys.Marathon => "/images/icons/mpace.png",
        PaceKeys.Threshold => "/images/icons/tpace.png",
        PaceKeys.Intervall => "/images/icons/ipace.png",
        PaceKeys.Repetition => "/images/icons/rpace.png",
        _ => "/images/icons/epace.png"
    };
}
