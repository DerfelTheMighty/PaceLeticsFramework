@using CoreLibrary.Constants;

@namespace PaceLetics.Components.Pace

<MudCard>
    <MudCardHeader>
        @switch(PaceKey)
    {
        case PaceKeys.Easy:
            <MudAvatar>
                <MudImage Src="_content/PaceLetics.Components/images/icons/epace.png" ></MudImage>
            </MudAvatar>
            <MudText> asy Pace</MudText>
            break;
        case PaceKeys.Marathon:
            <MudAvatar>
                <MudImage Src="_content/PaceLetics.Components/images/icons/mpace.png"></MudImage>
            </MudAvatar>
            <MudText> arathon Pace</MudText>
            break;
        case PaceKeys.Threshold:
            <MudAvatar>
                <MudImage Src="_content/PaceLetics.Components/images/icons/tpace.png"></MudImage>
            </MudAvatar>
            <MudText> hreshold Pace</MudText>
            break;
        case PaceKeys.Intervall:
            <MudAvatar>
                <MudImage Src="_content/PaceLetics.Components/images/icons/ipace.png" ></MudImage>
            </MudAvatar>
            <MudText> ntervall Pace</MudText>
            break;
        case PaceKeys.Repetition:
            <MudAvatar>
                <MudImage Src="_content/PaceLetics.Components/images/icons/rpace.png"></MudImage>
            </MudAvatar>
            <MudText> epetition Pace</MudText>
            break;
        default:
            <MudAvatar>
                <MudImage Src="_content/PaceLetics.Components/images/icons/epace.png"></MudImage>
                    <MudText> asy Pace</MudText>
            </MudAvatar>
            break;
    }
    </MudCardHeader>

    <MudCardContent>
        <MudText>
            <b>@UpperPace.ToString("mm':'ss")</b> min/km bis <b> @LowerPace.ToString("mm':'ss")</b> min/km;
        </MudText>
    </MudCardContent>

    <MudCardActions>
        <MudButton OnClick="@OnShowMoreInfoClickAsnyc" Variant="Variant.Text" Color="Color.Primary">Mehr Infos</MudButton>
    </MudCardActions>

</MudCard>






