@using WorkoutModule.Contracts
@using MudBlazor

@code {
    [Parameter]
    public IExerciseInfo ExerciseInfo { get; set; }
}

@if (ExerciseInfo != null)
{
    <MudPaper Class="exercise-card" Elevation="1">
        <MudText Typo="Typo.h5">@ExerciseInfo.Id</MudText>
        <MudAvatar Src="@ExerciseInfo.ImageFilename" Alt="@ExerciseInfo.Description" Size="Size.Large" />
        <MudText>@ExerciseInfo.Description</MudText>
        <MudList>
            <MudListItem><b>Level:</b> @ExerciseInfo.Level.ToString()</MudListItem>
            <MudListItem><b>Duration:</b> @ExerciseInfo.Duration seconds</MudListItem>
            <MudListItem><b>Switch Left/Right:</b> @(ExerciseInfo.SwitchLeftRight ? "Yes" : "No")</MudListItem>
            </MudList>
            @if (ExerciseInfo.Execution != null && ExerciseInfo.Execution.Any())
        {
            <MudExpansionPanels>
                <MudExpansionPanel Title="Execution Steps">
                    <MudList>
                        @foreach (var step in ExerciseInfo.Execution)
                        {
                            <MudListItem>@step</MudListItem>
                        }
                    </MudList>
                </MudExpansionPanel>
            </MudExpansionPanels>
        }
    </MudPaper>
}
else
{
    <MudText Color="Color.Error">Exercise information is not available.</MudText>
}

<style>
    .exercise-card {
        padding: 20px;
        margin: 20px;
    }
</style>