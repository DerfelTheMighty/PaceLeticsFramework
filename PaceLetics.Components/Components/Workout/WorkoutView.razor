@using MudBlazor;
@using WorkoutModule.Contracts;


<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.Small">

@if (Workout != null)
{
		<MudCarousel TData="object" AutoCycle="false" Class="mud-width-full" Style="height:500px;" ShowArrows="true" EnableSwipeGesture="true">
			@foreach(var item in Workout.Exercises)
			{
				<MudCarouselItem>
					<ExerciseInfoView Exercise="item"></ExerciseInfoView>
				</MudCarouselItem>
			}
		</MudCarousel>
}

</MudContainer>
@code {

	[Parameter]
	public IWorkout Workout { get; set; }

	protected override void OnInitialized()
	{

		Workout.Start();
		base.OnInitialized();
	}
}
