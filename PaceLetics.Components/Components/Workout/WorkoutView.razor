@using MudBlazor;
@using WorkoutModule.Contracts;



@if (Workout != null)
{
	<MudPaper Class="pa-4">
		<MudText Typo="Typo.h4"> @Workout.Name</MudText>
		<MudCarousel TData="object" AutoCycle="false" Class="mud-width-full" Style="height:800px;" ShowArrows="true" EnableSwipeGesture="true" ShowBullets="false">
			@foreach(var item in Workout.Exercises)
			{
				<MudCarouselItem>
					<ExerciseInfoView Exercise="item"></ExerciseInfoView>
				</MudCarouselItem>
			}
		</MudCarousel>
	</MudPaper>
}

@code {

	[Parameter]
	public IWorkout Workout { get; set; }

	protected override void OnInitialized()
	{

		Workout.Start();
		base.OnInitialized();
	}
}
