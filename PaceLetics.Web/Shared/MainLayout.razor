@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider Theme="MyCustomTheme" IsDarkMode="true" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />   

<PageTitle>PaceLetics</PageTitle>

<MudLayout>
    <MudAppBar Elevation="1">

        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@((e) => DrawerToggle())" />
        <MudText Align="Align.Start">PaceLetics - Team Running</MudText>
        <LoginDisplay />

    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen"
               ClipMode="DrawerClipMode.Always"
               Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent Style="margin-top: 24px;">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme MyCustomTheme = new()
    {
        LayoutProperties = new LayoutProperties()
        {
            DrawerWidthLeft = "260px",
            DrawerWidthRight = "300px"
        }
    };
}
