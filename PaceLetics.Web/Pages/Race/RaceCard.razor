@using CoreLibrary.Constants;
@using CoreLibrary.Models.Race;
@using MudBlazor;


<MudCard>
    <MudCardHeader>
        <MudExGrid>
        @switch(@Model?.Type)
        {
            case RaceKeys.D1k:
                <MudAvatar>
                    <MudImage Src="images/icons/epace.png"></MudImage>
                </MudAvatar>
                <MudText>@Model?.Id</MudText>
                break;
            case RaceKeys.D3k:
                <MudAvatar>
                    <MudImage Src="images/icons/mpace.png"></MudImage>
                </MudAvatar>
                <MudText>@Model?.Id</MudText>
                break;
            case RaceKeys.D5k:
                <MudAvatar>
                    <MudImage Src="images/icons/tpace.png"></MudImage>
                </MudAvatar>
                <MudText>@Model?.Id</MudText>
                break;
            case RaceKeys.D10k:
                <MudAvatar>
                    <MudImage Src="images/icons/ipace.png"></MudImage>
                </MudAvatar>
                <MudText>@Model?.Id</MudText>
                break;
            case RaceKeys.D15k:
                <MudAvatar>
                    <MudImage Src="images/icons/rpace.png"></MudImage>
                </MudAvatar>
                <MudText>@Model?.Id</MudText>
                break;
            case RaceKeys.D21k:
                <MudAvatar>
                    <MudImage Src="images/icons/rpace.png"></MudImage>
                </MudAvatar>
                <MudText>@Model?.Id</MudText>
                break;
            default:
                <MudAvatar>
                    <MudImage Src="images/icons/epace.png"></MudImage>
                </MudAvatar>
                <MudText>@Model?.Id</MudText>
                break;
    }
    </MudExGrid>
    </MudCardHeader>
    <MudCardContent>
        <MudText>
            <b>@Model?.Time.ToString()</b> hh:mm:ss
        </MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public RaceResultModel? Model { get; set; }

}
