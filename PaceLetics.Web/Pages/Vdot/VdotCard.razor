@using CoreLibrary.Constants;
@using CoreLibrary.Models.Race;
@using MudBlazor;


<MudCard>

    <MudChart ChartOptions="@(new() { DisableLegend = true, ChartPalette = new[] { "#0bba83ff", "0bba83ff" } })" ChartType="ChartType.Donut" Width="300px" Height="300px" @bind-SelectedIndex="_index" InputData="@Data">
        <CustomGraphics>
            <text class="donut-inner-text" x="47%" y="35%" dominant-baseline="middle" text-anchor="middle" fill="white" font-family="Helvetica" font-size="2">Dein Vdot</text>
            <text class="donut-inner-text" x="47%" y="50%" dominant-baseline="middle" text-anchor="middle" fill="white" font-family="Helvetica" font-size="5">@Data[0]</text>
        </CustomGraphics>
    </MudChart>

    <MudText Align="Align.Center">
        Super! Aus dem Referenzlauf können wir deine individuelle Vdot bestimmen. Das ist ein Surrogat für deine aktuellen läuferischen Fähigkeiten.
    </MudText>
</MudCard>

@code {
    MudExGradientText component;
    private int _index = -1; //default value cannot be 0 -> first selectedindex is 0.
    private int _dataSize = 2;

    [Parameter]
    public double[] Data { get; set; } = { 0, 0 };

    public string[] Labels { get; set; } = { "vdot" };

}
