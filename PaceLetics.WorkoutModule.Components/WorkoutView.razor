@using MudBlazor;
@using PaceLetics.WorkoutModule.CodeBase.Models
@using PaceLetics.WorkoutModule.CodeBase.Logic

@namespace PaceLetics.WorkoutModule.Components

@inject IDialogService dialogService

@if (Workout != null)
{
	<MudPaper>
			
		<MudCarousel TData="object" AutoCycle="false" 
			Class="mud-width-full" Style="height:850px;" 
			ShowArrows="@_allowSlide" EnableSwipeGesture="@_allowSlide" 
			ShowBullets="false" SelectedIndex="@_currentExercise">
			@foreach (var item in Workout.Exercises)
			{
				<MudCarouselItem>
					<ExerciseInfoView Exercise="item"></ExerciseInfoView>
				</MudCarouselItem>	
			}
		</MudCarousel>
			
	</MudPaper>
		


	


}


